<%- include('layout/header'); %>
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-3">
                <form action="/add" method="POST" enctype="multipart/form-data">
                    <div class="card mt-5 shadow-lg">
                        <div class="card-header bg-primary text-white"><h2>Add New Users</h2></div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="">Name</label>
                                <input type="text" class="form-control" name="name" placeholder="Enter Name" required>
                            </div>
                            <div class="form-group mt-3">
                                <label for="">Email</label>
                                <input type="text" class="form-control" name="email" placeholder="Enter Email" required>
                            </div>
                            <div class="form-group mt-3">
                                <label for="">Phone</label>
                                <input type="text" class="form-control" name="phone" placeholder="Enter Phone" required>
                            </div>
                            <div class="input-group mt-3">
                                <input type="file" class="form-control" name="image" id="inputGroupFile02" required>
                                <label class="input-group-text" for="inputGroupFile02">Upload</label>
                            </div>
                            <div class="d-grid gap-2 mt-3">
                                <input type="submit" name="submit" class="btn btn-primary" value="Add User">
                              </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

<%- include('layout/footer'); %>